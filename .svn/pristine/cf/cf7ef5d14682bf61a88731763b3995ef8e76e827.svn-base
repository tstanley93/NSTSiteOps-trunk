/*  Advanced Combination Tempate - version 3.0.06  */



@import "noedit.css";

@import "menu.css";



body  {

	margin-top: 0px; 

	margin-right: 0px;

	margin-bottom: 0px;

	margin-left: 0px;

	padding-top: 0px; 

	padding-right: 0px;

	padding-bottom: 0px;

	padding-left: 0px;

	font-family: Verdana, Arial, Helvetica, sans-serif;

	color: black;

	background-color: white;

}



#header {

	width: auto;

	border-bottom-width: 1px;

	border-bottom-style: solid;

	border-bottom-color: white;

}



a:link {

	color: #0038a8;

	background-color: transparent;

}



a:hover {

	color: black;

	text-decoration: none;

	background-color: transparent;

}



a:visited {

	color: #666;

	background-color: transparent;

} 



#personalityZone {

	height: 100%;

	/* background: url('../_images/pz_NST-SiteOps_Home.jpg') no-repeat; */

	background-position: left;

	border-bottom-width: 1px;

	border-bottom-style: solid;

	border-bottom-color: black;

	border-left-width: 1px;

	border-left-style: solid;

	border-left-color: black;
	
	z-index: 100;
	
	margin: 0px 0px 0px 175px; 
	
	padding: 0px 0px 0px 0px;
	
}


/* breadcrumb area */

div#breadcrumb {

	margin-top: 0px; 

	margin-right: 0px;

	margin-bottom: 0px;

	margin-left: 0px;

	padding-top: 0px; 

	padding-right: 0px;

	padding-bottom: 10px;

	padding-left: 0px;
	
	color: black;

	background-color: transparent;

	font-size: 70%;

	font-family: Verdana, Arial, Helvetica, sans-serif;

}



div#breadcrumb a {

	color: #0038a8;

	background-color: transparent;

}



div#breadcrumb a:hover {

	color: #000;

	background-color: transparent;

	text-decoration: none;

}



/* ### MAIN CONTENT STYLES ### */



#mainContent {

	font-family: Verdana, Arial, Helvetica, sans-serif;

	line-height: 90%;

	border-left-width: 1px;

	border-left-style: solid;

	border-left-color: #666;

}



#mainContent h1 {

	margin-top: 0px; 

	margin-right: 0px;

	margin-bottom: 0px;

	margin-left: 0px;

	padding-top: 0px; 

	padding-right: 0px;

	padding-bottom: 0px;

	padding-left: 0px;

	text-align: left;

	font-size: 100%;

	font-family: Helvetica, Verdana, Arial, sans-serif;

}



#mainContent h2, #mainContent h3, #mainContent h4 {

	margin-top: 0px; 

	margin-right: 0px;

	margin-bottom: 0px;

	margin-left: 0px;

	padding-top: 0px; 

	padding-right: 0px;

	padding-bottom: 0px;

	padding-left: 0px;

	text-align: left;

	font-size: 75%;

	font-family: Verdana, Arial, Helvetica, sans-serif;

}



#mainContent p {

	margin-top: 0px; 

	margin-right: 0px;

	margin-bottom: 0px;

	margin-left: 0px;

	padding-top: 5px; 

	padding-right: 5px;

	padding-bottom: 5px;

	padding-left: 0px;

	font-size: 75%;

}



#mainContent ul {

	margin-top: 20px; 

	margin-right: 20px;

	margin-bottom: 20px;

	margin-left: 20px;

	padding-top: 5px; 

	padding-right: 10px;

	padding-bottom: 5px;

	padding-left: 0px;

	font-size: 12px;

}



#mainContent li {

	padding-bottom: 6px;

}



#mainContent ol {

	margin-top: 0px; 

	margin-right: 0px;

	margin-bottom: 5px;

	margin-left: 25px;

	padding-top: 5px; 

	padding-right: 20px;

	padding-bottom: 5px;

	padding-left: 0px;

	font-size: 12px;

}



/* last updated area */

#updated {

	margin-top: 0px; 

	margin-right: 0px;

	margin-bottom: 0px;

	margin-left: 0px;

	padding-top: 5px; 

	padding-right: 10px;

	padding-bottom: 5px;

	padding-left: 0px;

	font-size: 65%;

	font-family: Verdana, Arial, Helvetica, sans-serif;

	color: black;

	background-color: transparent;

}